
{{#if tasks}}
<p style="margin-left: 10px;">Alumnos calificados</p>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Alumno</th>
      <th scope="col">Matrícula</th>
      <th scope="col">Calificación</th>
      <th scope="col">Estado</th>
      <th scope="col">Opción</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    {{#if done}}
    <tr>
      <th>{{listar @index}}</th>
      <td><strong>{{name}}</strong></td>
      <td>{{matricula}}</td>
      <td>{{calificacion}}</td>
      <td>{{#euroadolar calificacion}}{{/euroadolar}}</td>
      {{#ifEquals calificacion 7}}<td style="color: green; font-weight:bolder">Aprobado</td>{{/ifEquals}}
      {{#ifCal calificacion 8}}<td style="color: red; font-weight:bolder">Reprobado</td>{{/ifCal}}
      <td>
        {{#if done}} {{!apertura del if}}
        <a class="btn btn-success" href="/tasks/{{_id}}/toggleDone">Revisado</a>
        {{else}}
        <a class="btn btn-secondary" href="/tasks/{{_id}}/toggleDone">No revisado</a>
        {{/if}} {{!cierre del if}}
      
      </td>
    </tr>
    {{/if}}
    {{/each}}
  </tbody>
</table>

<p style="margin-left: 10px;">Alumnos no calificados</p>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Alumno</th>
      <th scope="col">Matrícula</th>
      <th scope="col">Calificación</th>
      <th scope="col">Estado</th>
      <th scope="col">Opción</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    {{#if done}}
    {{else}}
    <tr>
      <th>{{listar @index}}</th>
      <td><strong>{{name}}</strong></td>
      <td>{{matricula}}</td>
      <td>{{calificacion}}</td>
      {{#ifEquals calificacion 7}}<td style="color: green; font-weight:bolder">Aprobado</td>{{/ifEquals}}
      {{#ifCal calificacion 8}}<td style="color: red; font-weight:bolder">Reprobado</td>{{/ifCal}}
      <td>
        {{#if done}} {{!apertura del if}}
        <a class="btn btn-success" href="/tasks/{{_id}}/toggleDone">Calificado</a>
        {{else}}
        <a class="btn btn-secondary" href="/tasks/{{_id}}/toggleDone">No calificado</a>
        {{/if}} {{!cierre del if}}
        <a class="btn btn-primary" href="/tasks/{{_id}}/edit">Cambiar calificación</a>
        <a class="btn btn-danger" href="/tasks/{{_id}}/delete">Eliminar</a>
      </td>
    </tr>
    {{/if}}
    {{/each}}
  </tbody>
</table>

{{else}}

<div>
  <div>
    <h1>No tasks</h1>
    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-clipboard-check-fill" viewBox="0 0 16 16">
      <path d="M6.5 0A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3Zm3 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3Z"/>
      <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1A2.5 2.5 0 0 1 9.5 5h-3A2.5 2.5 0 0 1 4 2.5v-1Zm6.854 7.354-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708.708Z"/>
    </svg>
  </div>
</div>
{{/if}}
