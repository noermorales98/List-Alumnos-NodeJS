<div class="card card-body p-4 rounded-10 bg-dark text-white">
    <h3>Add a Tasks</h3>
    <form action="/tasks/add" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Write a title:</label>
            <input type="text" class="form-control" id="title" placeholder="Title" name="title" autofocus/>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" cols="80" placeholder="Add a description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div